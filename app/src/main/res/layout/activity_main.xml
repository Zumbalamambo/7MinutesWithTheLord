<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="startActivity"
        android:textColor="#FFFFFF"
        android:background="@layout/custom_button"
        android:textSize="24sp"
        android:text="@string/start" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="180dp"
        android:textColor="#330066"
        android:textSize="50sp"
        android:text="" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="18dp"
        android:textSize="24sp"
        android:textColor="#330066"
        android:text="@string/title" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="26dp"
        android:textSize="18sp"
        android:textColor="#330066"
        android:gravity ="center"
        android:text="@string/select_language" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="exitApp"
        android:background="@layout/custom_button_2"
        android:textSize="14sp"
        android:text="@string/exit" />

    <Button
        android:id="@+id/buttonPause"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:onClick="pauseTimer"
        android:textColor="#FFFFFF"
        android:background="@layout/bottom_button"
        android:text="@string/pause" />

    <ImageButton
        android:id="@+id/buttonBackward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:onClick="backwardTimer"
        android:contentDescription="@string/desc"
        android:src="@drawable/ic_action_rewind"
        android:background="@layout/bottom_button"
        android:text="@string/backward" />

    <ImageButton
        android:id="@+id/buttonForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="forwardTimer"
        android:contentDescription="@string/desc"
        android:src="@drawable/ic_action_fast_forward"
        android:background="@layout/bottom_button"
        android:text="@string/forward" />

    <Button
        android:id="@+id/buttonRestart"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@layout/custom_button"
        android:onClick="restartActivity"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:text="@string/reset" />

    <ScrollView
        android:id="@+id/scrollV"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView2"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonIndonesia"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@layout/button_style_english"
                android:onClick="setIndonesianLocale"
                android:text="Bahasa Indonesia"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonChineseTaiwan"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@layout/button_style_traditional"
                android:onClick="setChineseTraditionalLocale"
                android:text="中文(繁體)"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonChinese"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@layout/button_style_indonesia"
                android:onClick="setChineseLocale"
                android:text="中文(简体)"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonGerman"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@layout/button_style_spanish"
                android:onClick="setGermanLocale"
                android:text="Deutsch"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonEnglish"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@layout/button_style_korean"
                android:onClick="setEnglishLocale"
                android:text="English (US)"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonKorean"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@layout/button_style_chinese"
                android:onClick="setKoreanLocale"
                android:text="한국어"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonPortuguese"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@layout/button_style_por"
                android:onClick="setPortugueseLocale"
                android:text="Portuguese"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonSpanish"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@layout/button_style_german"
                android:onClick="setSpanishLocale"
                android:text="Spanish"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonTagalog"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@layout/button_style_tagalog"
                android:onClick="setTagalogLocale"
                android:text="Tagalog"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonRussian"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@layout/button_style_russian"
                android:onClick="setRussianLocale"
                android:text="Russian"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonUkrainian"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@layout/button_style_ukrainian"
                android:onClick="setUkrainianLocale"
                android:text="Ukrainian"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>